<h1>Uploaded CSV Files</h1>

<table>
  <thead>
    <tr>
      <th>File Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @csv_files.each do |csv_file| %>
      <tr>
        <td><%= csv_file.file_name %></td>
        <td>
          <%= link_to 'Download', download_csv_file_path(csv_file) %> |
          <%= button_to 'Delete', csv_file_path(csv_file), method: :delete, data: { confirm: "Are you sure?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Upload New File', new_csv_file_path %>

<h2>List of Charges</h2>

<table>
  <thead>
    <tr>
      <th>CSV File Name</th>
      <th>Amount</th>
      <th>Currency</th>
      <th>Status</th>
      <th>Response</th>
    </tr>
  </thead>
  <tbody>
    <% @transactions.each do |transaction| %>
      <tr>
        <td><%= transaction.csv_file.file_name %></td> <!-- Display the associated CSV file name -->
        <td><%= transaction.amount %></td>
        <td><%= transaction.currency %></td>
        <td><%= transaction.status %></td>
        <td><%= transaction.api_response %></td>
      </tr>
    <% end %>
  </tbody>
</table>